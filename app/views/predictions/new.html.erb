<h1>Prediction Page</h1>

<% if @prediction.errors.any? %>
<h2>ERROR!</h2>
<ul>
  <% @prediction.errors.full_messages.each do |error_msg| %>
  <li><%= error_msg %></li>
  <% end %>
</ul>

<% end %>


<!--  BUILD ARRAY IN THE CONTROLLER-->
<!--  -->


<%= form_for ([@concert, @prediction]) do |f| %>

  <%= f.label :set_one_opener, "Set One Opener" %>
  <%= f.select :set_one_opener,
  @song_list.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.label :set_one_closer, "Set One Closer" %>
  <%= f.select :set_one_closer,
  @song_list.all.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.label :set_two_opener, "Set Two Opener" %>
  <%= f.select :set_two_opener,
  @song_list.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.label :set_two_closer, "Set Two Closer"%>
  <%= f.select :set_two_closer,
  @song_list.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.label :encore, "Encore"%>
  <%= f.select :encore,
  @song_list.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.label :random_song, "Random Pick"%>
  <%= f.select :random_song,
  @song_list.map { |s| [s.song_name, s.id] },
  { include_blank: true },
  { class: 'chosen-select' }
  %>

  <%= f.submit "Submit Predictions" %>

<% end %>
